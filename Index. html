import React, { useState } from 'react';
import { 
  ShieldCheck, 
  Users, 
  Wallet, 
  GraduationCap, 
  TrendingUp, 
  CheckCircle,
  Zap,
  PlayCircle,
  Star,
  Download,
  QrCode,
  LayoutDashboard,
  BookOpen,
  Sparkles,
  Loader2
} from 'lucide-react';

const apiKey = ""; // Environment handles this

const App = () => {
  const [activeTab, setActiveTab] = useState('home');
  const [balance, setBalance] = useState(0);
  const [userQuery, setUserQuery] = useState("");
  const [aiResponse, setAiResponse] = useState("");
  const [loading, setLoading] = useState(false);

  const packages = [
    { name: "Silver Elite", price: 199, commission: "₹150", skills: ["Canva", "Lead Gen", "Insta Unban"], color: "bg-indigo-600" },
    { name: "Gold Digital", price: 599, commission: "₹450", skills: ["Video Editing", "Affiliate", "Ads"], color: "bg-amber-600" },
    { name: "Diamond Pro", price: 1499, commission: "₹1125", skills: ["Coding", "Interview", "English"], color: "bg-blue-600" },
    { name: "Stock Legend", price: 2999, commission: "₹2250", skills: ["Trading", "Analysis", "Portfolio"], color: "bg-emerald-600" },
    { name: "University", price: 9999, commission: "₹7500", skills: ["IAS/UPSC", "IIT/JEE", "Mentorship"], color: "bg-purple-700" },
    { name: "Free Income", price: 0, commission: "Task Based", skills: ["Ad Watch", "Data Entry", "Refer"], color: "bg-slate-700" }
  ];

  const callGemini = async () => {
    if (!userQuery) return;
    setLoading(true);
    const systemPrompt = "You are RechIndia AI. Tell users how to earn money from tasks and courses. Keep it in Hinglish.";
    try {
      const res = await fetch(`https://generativelanguage.googleapis.com/v1beta/models/gemini-2.5-flash-preview-09-2025:generateContent?key=${apiKey}`, {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({
          contents: [{ parts: [{ text: userQuery }] }],
          systemInstruction: { parts: [{ text: systemPrompt }] }
        })
      });
      const data = await res.json();
      setAiResponse(data.candidates?.[0]?.content?.parts?.[0]?.text);
      setLoading(false);
    } catch (err) {
      setAiResponse("Network busy. Try again.");
      setLoading(false);
    }
  };

  const Nav = () => (
    <nav className="fixed top-0 w-full z-50 bg-black/95 border-b border-white/10 px-6 py-4 flex justify-between items-center">
      <div className="flex items-center gap-2">
        <Zap className="text-indigo-500 fill-current" size={20} />
        <h1 className="text-xl font-black tracking-tighter text-white uppercase">RECH<span className="text-indigo-500">INDIA</span></h1>
      </div>
      <div className="hidden md:flex gap-6 text-[9px] font-bold uppercase tracking-widest text-slate-400">
        <button onClick={() => setActiveTab('home')}>Home</button>
        <button onClick={() => setActiveTab('courses')}>6 Packages</button>
        <button onClick={() => setActiveTab('dashboard')} className="bg-indigo-600 text-white px-4 py-2 rounded-full">Dashboard</button>
      </div>
    </nav>
  );

  return (
    <div className="min-h-screen bg-black text-white selection:bg-indigo-500">
      <Nav />
      
      {activeTab === 'home' && (
        <div className="pt-28 pb-20">
          {/* Hero Section */}
          <section className="px-6 text-center max-w-4xl mx-auto mb-20">
            <div className="inline-flex items-center gap-2 bg-green-500/10 border border-green-500/20 px-3 py-1 rounded-full mb-6">
              <ShieldCheck size={14} className="text-green-500" />
              <span className="text-[10px] font-bold uppercase text-green-400">ISO & MSME Certified Platform</span>
            </div>
            <h2 className="text-5xl md:text-7xl font-black mb-6 italic uppercase leading-tight">Learn & <span className="text-indigo-500">Earn Free</span></h2>
            <p className="text-slate-400 text-sm mb-10">Bina course sell kiye bhi kamao! India ka bharosemand educational portal.</p>
            <div className="flex justify-center gap-4">
              <button onClick={() => setActiveTab('courses')} className="bg-indigo-600 px-8 py-4 rounded-xl font-black uppercase text-xs">View Courses</button>
              <button onClick={() => setActiveTab('dashboard')} className="bg-white/5 border border-white/10 px-8 py-4 rounded-xl font-black uppercase text-xs">Start Free Earning</button>
            </div>
          </section>

          {/* Sarkari Certificate & Proof */}
          <section className="px-6 max-w-6xl mx-auto mb-20">
            <div className="bg-white text-black p-8 rounded-[2.5rem] flex flex-col md:flex-row items-center gap-8 shadow-2xl border-4 border-indigo-500">
              <div className="w-32 h-32 bg-slate-100 flex items-center justify-center rounded-2xl border-2 border-dashed border-slate-300">
                <ShieldCheck size={48} className="text-indigo-600" />
              </div>
              <div className="text-center md:text-left">
                <h3 className="text-2xl font-black uppercase italic">Sarkari Manyata Prapt (Verified)</h3>
                <p className="text-sm font-bold text-slate-600 mt-2">Humare certificates MSME aur ISO certified hain, jo aapke resume aur jobs ke liye 100% valid hain.</p>
                <button className="mt-4 flex items-center gap-2 text-indigo-600 font-black uppercase text-[10px] underline">
                  <Download size={14}/> Download Sample Certificate
                </button>
              </div>
            </div>
          </section>

          {/* Student Feedbacks */}
          <section className="px-6 max-w-6xl mx-auto mb-20">
            <h3 className="text-2xl font-black uppercase italic text-center mb-10">Student <span className="text-indigo-500">Feedbacks</span></h3>
            <div className="grid grid-cols-1 md:grid-cols-3 gap-6">
              {[
                { name: "Rahul Verma", msg: "Maine bina sell kiye tasks se ₹2000 kamaye!", color: "bg-blue-500" },
                { name: "Sneha Das", msg: "Diamond package ke coding courses best hain.", color: "bg-purple-500" },
                { name: "Amit Raj", msg: "Satyam Sir ki mentorship ne life badal di.", color: "bg-orange-500" }
              ].map((f, i) => (
                <div key={i} className="bg-slate-900/50 p-6 rounded-3xl border border-white/5">
                  <div className="flex text-amber-500 mb-3"><Star size={12} fill="currentColor"/><Star size={12} fill="currentColor"/><Star size={12} fill="currentColor"/><Star size={12} fill="currentColor"/><Star size={12} fill="currentColor"/></div>
                  <p className="text-xs text-slate-300 mb-4 italic">"{f.msg}"</p>
                  <div className="flex items-center gap-3">
                    <div className={`w-8 h-8 ${f.color} rounded-full flex items-center justify-center font-black text-[10px]`}>{f.name[0]}</div>
                    <span className="text-[10px] font-black uppercase">{f.name}</span>
                  </div>
                </div>
              ))}
            </div>
          </section>
        </div>
      )}

      {activeTab === 'courses' && (
        <div className="pt-28 px-6 max-w-7xl mx-auto pb-20">
          <h3 className="text-3xl font-black uppercase italic text-center mb-12">Select Your <span className="text-indigo-500">6 Packages</span></h3>
          <div className="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            {packages.map((pkg, i) => (
              <div key={i} className={`p-8 rounded-[2rem] border border-white/10 ${pkg.color} bg-opacity-10 flex flex-col`}>
                <h4 className="text-xl font-black uppercase italic mb-2">{pkg.name}</h4>
                <div className="text-4xl font-black mb-6">₹{pkg.price}</div>
                <ul className="space-y-3 mb-8 flex-grow">
                  {pkg.skills.map((s, idx) => (
                    <li key={idx} className="flex items-center gap-2 text-[10px] font-bold uppercase">
                      <CheckCircle size={14} className="text-green-500" /> {s}
                    </li>
                  ))}
                </ul>
                <div className="bg-black/40 p-3 rounded-xl mb-4 text-center">
                  <p className="text-[10px] font-black uppercase text-indigo-400">Profit: {pkg.commission}</p>
                </div>
                <button className="w-full py-4 bg-white text-black font-black uppercase text-xs rounded-xl">Enroll Now</button>
              </div>
            ))}
          </div>
        </div>
      )}

      {activeTab === 'dashboard' && (
        <div className="pt-28 px-6 max-w-6xl mx-auto pb-20">
          <div className="grid grid-cols-1 lg:grid-cols-3 gap-8">
            <div className="lg:col-span-2 space-y-6">
              {/* Earnings */}
              <div className="bg-slate-900 border border-white/5 p-8 rounded-[2.5rem] flex justify-between items-center">
                <div>
                  <p className="text-[10px] font-black text-slate-500 uppercase">Wallet Balance</p>
                  <h3 className="text-4xl font-black mt-1">₹{balance}.00</h3>
                </div>
                <button className="bg-indigo-600 px-6 py-3 rounded-xl font-black uppercase text-[10px]">Withdraw Now</button>
              </div>

              {/* Free Task Earning Section */}
              <div className="bg-black border border-white/10 p-8 rounded-[2.5rem]">
                <h4 className="text-lg font-black uppercase italic mb-6">Free Earning Tasks (No Selling)</h4>
                <div className="grid grid-cols-1 md:grid-cols-2 gap-4">
                  <div onClick={() => setBalance(b => b + 10)} className="p-4 bg-white/5 border border-white/5 rounded-2xl cursor-pointer hover:bg-white/10 flex justify-between items-center">
                    <div><h5 className="text-[10px] font-black uppercase">Watch Ad Video</h5><p className="text-[8px] text-slate-500 uppercase">Kamao ₹10</p></div>
                    <PlayCircle size={20} className="text-indigo-500" />
                  </div>
                  <div onClick={() => setBalance(b => b + 20)} className="p-4 bg-white/5 border border-white/5 rounded-2xl cursor-pointer hover:bg-white/10 flex justify-between items-center">
                    <div><h5 className="text-[10px] font-black uppercase">App Testing</h5><p className="text-[8px] text-slate-500 uppercase">Kamao ₹20</p></div>
                    <Zap size={20} className="text-green-500" />
                  </div>
                </div>
              </div>

              {/* AI Chat Helper */}
              <div className="bg-indigo-600/5 border border-indigo-500/20 p-8 rounded-[2.5rem]">
                <h4 className="text-lg font-black uppercase italic mb-4 flex items-center gap-2"><Sparkles className="text-indigo-500" size={18}/> RechIndia AI Helper</h4>
                <div className="bg-black/40 p-4 rounded-xl mb-4 text-xs text-slate-300 min-h-[60px]">
                  {loading ? <Loader2 className="animate-spin mx-auto text-indigo-500" /> : aiResponse || "Sawal poochein: 'Paise kaise kamayein?'"}
                </div>
                <div className="flex gap-2">
                  <input type="text" value={userQuery} onChange={(e) => setUserQuery(e.target.value)} placeholder="Type here..." className="flex-grow bg-white/5 border border-white/10 rounded-xl px-4 text-xs" />
                  <button onClick={callGemini} className="bg-indigo-600 px-4 py-2 rounded-xl text-[10px] font-black uppercase">Ask AI</button>
                </div>
              </div>
            </div>

            {/* Side Admin Info */}
            <div className="bg-slate-900 border border-white/5 p-8 rounded-[2.5rem] text-center">
              <h4 className="text-lg font-black uppercase italic mb-6">Payment Admin</h4>
              <div className="bg-white p-4 rounded-2xl inline-block mb-4 shadow-xl">
                <div className="w-40 h-40 bg-slate-100 flex items-center justify-center border-2 border-dashed border-slate-300">
                  <QrCode size={80} className="text-black" />
                </div>
              </div>
              <p className="text-[9px] text-slate-500 uppercase font-black mb-10">Scan to pay (Company QR)</p>
              <div className="space-y-3">
                <div className="p-4 bg-white/5 rounded-xl border border-white/5">
                  <p className="text-[8px] text-slate-500 uppercase font-black">Founder</p>
                  <p className="text-xs font-black uppercase">Satyam Vishwakarma</p>
                </div>
                <div className="p-4 bg-white/5 rounded-xl border border-white/5">
                  <p className="text-[8px] text-slate-500 uppercase font-black">CEO</p>
                  <p className="text-xs font-black uppercase">Neeraj Kumar</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      )}

      <footer className="py-20 text-center opacity-20 border-t border-white/5 mt-10">
        <h2 className="text-xl font-black italic tracking-tighter uppercase">RECH<span className="text-indigo-500">INDIA</span></h2>
        <p className="text-[8px] font-bold uppercase tracking-[0.4em] mt-2">Skills For Bharat | 2025</p>
      </footer>
    </div>
  );
};

export default App;
